{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Debug ccontext",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/ccontext/main.py",
      "args": [
        "-p",
        "${workspaceFolder}", // Example argument: Root path
        "--verbose" // Enable verbose mode
      ],
      "console": "integratedTerminal",
      "justMyCode": false, // Set to false to debug dependencies
      "env": {
        "PYTHONPATH": "${workspaceFolder}" // Include the current folder in PYTHONPATH
      }
    }
  ]
}
